<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TipTime" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/bluish_grey</item>
        <item name="colorSecondaryVariant">@color/bluish_grey</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>



    <style name="tabTextFont" parent="TextAppearance.Design.Tab">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Theme.MKSNews" parent="Base.Theme.MKSNews" />
